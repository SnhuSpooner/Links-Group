{
    "manifestVersion": 1,
    "id": "auto-task",
    "version": "0.1.12",
    "name": "Auto Task Group",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Automate child work item creation",
    "publisher": "ottostreifel",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item",
        "Group",
        "Automation",
        "Productivity",
        "Task",
        "Child Workitem",
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/ostreifel/Auto-Task"
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "taskGroup.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "auto-task-group",
            "type": "ms.vss-work-web.work-item-form-group",
            "description": "Show tasks associated with the current workitem",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Tasks",
                "uri": "taskGroup.html"
            }
        }
    ]
}
